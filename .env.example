# Ejemplo de archivo .env con valores de producción
# Copia este archivo como .env.production para configuración de producción

# =======================================================================
# CONFIGURACIÓN DE PRODUCCIÓN N8N CON POSTGRESQL
# =======================================================================

# Configuración de PostgreSQL
POSTGRES_USER=n8n_admin_prod
POSTGRES_PASSWORD=PASSWORD_SUPER_SEGURO_PROD_2024!
POSTGRES_DB=n8n_production
POSTGRES_NON_ROOT_USER=n8n_user_prod
POSTGRES_NON_ROOT_PASSWORD=PASSWORD_USER_SEGURO_PROD_2024!

# Configuración de N8N
N8N_HOST=tu-dominio.com
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://tu-dominio.com/

# Clave de encriptación (GENERAR UNA NUEVA CON: openssl rand -base64 32)
N8N_ENCRYPTION_KEY=REEMPLAZAR_CON_CLAVE_REAL_DE_32_CARACTERES

# Configuración de autenticación básica (HABILITADA EN PRODUCCIÓN)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin_prod
N8N_BASIC_AUTH_PASSWORD=PASSWORD_ADMIN_MUY_SEGURO_2024!

# Configuración de zona horaria
TIMEZONE=America/Argentina/Buenos_Aires

# Configuración de logs (más detallada en producción)
N8N_LOG_LEVEL=warn
N8N_LOG_OUTPUT=console

# =======================================================================
# CONFIGURACIÓN AVANZADA DE PRODUCCIÓN
# =======================================================================

# Configuración de SMTP para notificaciones
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=smtp.gmail.com
N8N_SMTP_PORT=587
N8N_SMTP_USER=tu-email@gmail.com
N8N_SMTP_PASS=tu-app-password
N8N_SMTP_SENDER=tu-email@gmail.com

# Configuración de límites de ejecución
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=168  # 7 días

# Configuración de seguridad adicional
N8N_SECURE_COOKIE=true
N8N_COOKIE_SAME_SITE_POLICY=strict

# Configuración de proxy (si es necesario)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080